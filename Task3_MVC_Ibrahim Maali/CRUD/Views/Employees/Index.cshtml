@model List<Employee>
@{
    ViewData["Title"] = "Index";
}
@*<a href="/Employees/Create" class="btn btn-outline-success">New</a>*@

<a asp-controller="Employees" asp-action="Create" class="btn btn-outline-success"> New</a>

<h1>All Employees</h1>

<table class="table">
    <thead>
        <tr>
            <td> Id</td>
            <td>Name</td>
            <td>Email</td>
            <td>Password</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var emp in Model)
        {
         <tr>
                     <td> @emp.Id</td>
                <td>@emp.Name</td>
                <td>@emp.Email</td>
                <td>@emp.Password</td>

                   @* <td><a href="/Employees/Update" class="btn btn-outline-success">Update</a></td>
                    <td><a href="/Employees/Delete" class="btn btn-outline-success">Delete</a></td>*@

                          <td><a asp-controller="Employees" asp-action="Update" asp-route-id="@emp.Id"
                              class="btn btn-outline-success">Update</a></td>

                          <td><a asp-controller="Employees" asp-action="Delete" asp-route-id="@emp.Id" 
                                  class="btn btn-outline-success">Delete</a></td>

          </tr>
        }

  

    </tbody>
</table>