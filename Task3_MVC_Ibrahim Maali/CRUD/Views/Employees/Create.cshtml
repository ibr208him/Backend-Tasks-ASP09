@model Employee

@{
    ViewData["Title"] = "Create";
}

<form class="d-flex  flex-column gap-3 bg-warning p-5 bg-gradient" asp-action="Create">
    <label asp-for="Name"> @Html.DisplayNameFor(emp=>emp.Name)</label>
    <input  asp-for="Name" />

     <label asp-for="Email" > Enter your email</label>
    <input  asp-for="Email"/>

     <label asp-for="Password"> Enter your password</label>
    <input  asp-for="Password"/>
    <button type="submit" class="mt-4 w-50 bg-success m-auto py-3"> Create</button>
</form>

